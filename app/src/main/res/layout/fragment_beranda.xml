<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".content.BerandaFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:id="@+id/salam1"
                android:text="Selamat Datang di Aplikasi"
                android:layout_marginTop="40dp"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_below="@id/salam1"
                android:gravity="center"
                android:id="@+id/salam2"
                android:text="Leprosy Care"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_below="@id/salam2"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:src="@color/colorNavigation"
                app:civ_border_color="#E4DBDB"
                app:civ_border_width="2dp"/>
            <TextView
                android:text=""
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/image"
                android:id="@+id/namauser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <TextView
                android:text=""
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/namauser"
                android:id="@+id/poin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </ScrollView>
</FrameLayout>